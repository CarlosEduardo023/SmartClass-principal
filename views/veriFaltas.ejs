        <thead>
          <tr>
            <th>Disciplina</th>
            <th>Faltas</th>
            <th>Ano</th>
            <th>Semestre</th>
          </tr>
        </thead>
        <tbody id="notaList" class="overflow-auto">
          <!-- データはここに挿入されます -->
        </tbody>
